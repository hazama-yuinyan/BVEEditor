<DataTemplate
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d">
    
    <MenuItem lex:InheritingResxLocalizationProvider.DefaultAssembly="BVEEditor"
              lex:InheritingResxLocalizationProvider.DefaultDictionary="StringResources"
              cal:Bind.ModelWithoutContext="{Binding .}" Header="{lex:Loc MainMenu_Help}">
        <MenuItem x:Name="ShowAboutDialog" Header="{lex:Loc MainMenu_HelpMenu_ShowAboutEntry}" />
    </MenuItem>
</DataTemplate>
